<div class="col-12 my-2 rounded position-relative shadow-lg btn btn-outline-light text-dark"
     xmlns="http://www.w3.org/1999/html">
    <div class="row">
        <div class="col-3 col-sm-2 col-md-1 d-flex justify-content-center align-items-center">
            {% if bug.draft %}
                {{ 'draft'|trans }}
            {% else %}
                {{ app_icon(bug.application) }}
            {% endif %}
        </div>
        <div class="col-9 col-sm-10 col-md-11">
            <div class="row">
                <div class="col">
                    <div class="text-start">
                        <span class="h5">{{ bug.title }}</span>
                    </div>
                    <div class="text-start">
                        <span class="fw-bolder text-decoration-underline">Remont√© par :</span>
                        <small>{{ bug.user.userIdentifier }}</small>
                        <br/>
                        <span class="fw-bolder text-decoration-underline">Le :</span>
                        <small>{{ bug.createdAt|date("d/m/Y") }}</small>
                    </div>
                </div>
                {% if not bug.draft %}
                    <div class="col flex-grow-0 z-2 d-flex flex-column align-items-end">
                        {{ include('bug/_status.html.twig', {'bug': bug}) }}
                        {{ include('bug/_assignee_section.html.twig', {'bug': bug}) }}
                        {{ include('bug/_votes.html.twig', {'bug': bug}) }}
                    </div>
                {% endif %}
            </div>
        </div>
        <a href="{{ path('bug_show', {'id': bug.id}) }}" class="stretched-link"></a>
    </div>
</div>
